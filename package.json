{
  "name": "@mofon-design/wc-core",
  "version": "0.2.1",
  "description": "Web components core of Mofon Design",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "typings": "typings.d.ts",
  "scripts": {
    "build": "npm run build:es && npm run build:lib",
    "build:es": "rm -rf es/ && tsc --build tsconfig.json",
    "build:lib": "rm -rf lib/ && tsc --build tsconfig.es5.json",
    "build:example": "npm run compile:example && rm -rf example/es && node scripts/buildExample.js",
    "compile:example": "npm run build:es && tsc --build example/tsconfig.json",
    "lint": "npm run build:es && npm run lint:script && npm run lint:style",
    "lint-fix": "npm run lint-fix:script && npm run lint-fix:style",
    "lint-fix:script": "npm run lint:script -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix",
    "lint:script": "eslint . --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "stylelint 'src/**/*.less' --syntax less",
    "prettier:ts": "prettier ./**/*.ts --write",
    "prettier:js": "prettier ./**/*.js --write --loglevel=error",
    "prepublish": "npm run build"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "devDependencies": {
    "@umijs/fabric": "^2.0.3",
    "chalk": "^3.0.0",
    "csstype": "^2.6.10",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.0",
    "typescript": "^3.8.0",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "tslib": "^1.11.1"
  },
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write"
    ],
    "*.js?(x)": [
      "eslint",
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "files": [
    "es",
    "lib",
    "src",
    "typings.d.ts"
  ],
  "bugs": {
    "url": "https://github.com/mofon-design/wc-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mofon-design/wc-core"
  },
  "keywords": [
    "mofon",
    "component",
    "components",
    "webcomponent",
    "web-component",
    "core"
  ]
}
