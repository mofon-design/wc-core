{
  "name": "@mofon-design/wc-core",
  "version": "0.3.0-beta.1",
  "description": "Web components core of Mofon Design",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "typings": "typings.d.ts",
  "scripts": {
    "build": "gulp",
    "lint": "npm run build:es && npm run lint:script && npm run lint:style",
    "lint-fix": "npm run lint-fix:script && npm run lint-fix:style",
    "lint-fix:script": "npm run lint:script -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix",
    "lint:script": "eslint . --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "stylelint 'src/**/*.less' --syntax less",
    "prettier:ts": "prettier ./**/*.ts --write",
    "prettier:js": "prettier ./**/*.js --write --loglevel=error",
    "prepublish": "npm run build"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@mofon-design/csstype": "^1.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@types/babel__preset-env": "^7.9.0",
    "@types/gulp": "^4.0.6",
    "@types/gulp-typescript": "^2.13.0",
    "@types/merge2": "^1.3.0",
    "@umijs/fabric": "^2.0.3",
    "chalk": "^3.0.0",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lint-staged": "^10.0.8",
    "merge2": "^1.4.1",
    "prettier": "^1.19.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.8.0",
    "yorkie": "^2.0.0"
  },
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write"
    ],
    "*.js?(x)": [
      "eslint",
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "files": [
    "es",
    "lib",
    "src",
    "typings.d.ts"
  ],
  "bugs": {
    "url": "https://github.com/mofon-design/wc-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mofon-design/wc-core"
  },
  "keywords": [
    "mofon",
    "component",
    "components",
    "webcomponent",
    "web-component",
    "core"
  ]
}
